<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.segproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home_page"
            android:label="@string/title_activity_home_page"
            android:parentActivityName=".LoginPage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.segproject.LoginPage" />
        </activity>
        <activity
            android:name=".create_profile"
            android:label="@string/title_activity_create_profile"
            android:parentActivityName=".LoginPage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.segproject.LoginPage" />
        </activity>
        <activity
            android:name=".create_task"
            android:label="@string/title_activity_create_task"
            android:parentActivityName=".home_page"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.segproject.home_page" />
        </activity>
        <activity
            android:name=".parent_profile"
            android:label="@string/title_activity_parent_profile"
            android:parentActivityName=".home_page"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.segproject.home_page" />
        </activity>
        <activity
            android:name=".child_profile"
            android:label="@string/title_activity_child_profile"
            android:parentActivityName=".home_page"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.segproject.home_page" />
        </activity>
    </application>

</manifest>